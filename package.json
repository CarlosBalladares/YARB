{
  "name": "yarb",
  "version": "0.0.1",
  "description": "BoilerPlate to start react projects",
  "main": "dist/index.js",
  "author": "Carlos Balladares",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "express": "^4.17.1",
    "pug": "^2.0.4",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "scripts": {
    "start": "node ./dist/server.js",
    "buildDev": "rimraf dist && webpack --config webpack.server.config.js && webpack --config webpack.dev.config.js",
    "buildProd": "rimraf dist && webpack --config webpack.server.config.js && webpack --config webpack.prod.config.js",
    "dev": "yarn buildDev && yarn start",
    "prod": "yarn buildProd && yarn start"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.1.0",
    "extract-css-chunks-webpack-plugin": "^4.5.6",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.8.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "style-loader": "^0.23.1",
    "uglifyjs-webpack-plugin": "^2.1.3",
    "webpack": "^4.38.0",
    "webpack-cli": "^3.3.6",
    "webpack-dev-middleware": "^3.7.0",
    "webpack-node-externals": "^1.7.2",
    "webpack-stats-plugin": "^0.3.0"
  },
  "bit": {
    "env": {
      "compiler": "bit.envs/compilers/react@1.0.2"
    },
    "componentsDefaultDirectory": "components/{name}",
    "packageManager": "npm"
  }
}
